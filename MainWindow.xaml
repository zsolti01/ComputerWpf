            <MenuItem Header="OPrendszerek" Name="OPS" HorizontalAlignment="Center" VerticalAlignment="Center" Click="OPS_Click" Height="40" Width="118" Foreground="Black" BorderBrush="Black" FontWeight="Bold"/>
        </Menu>
        <ListBox x:Name="sqlListBox" d:ItemsSource="{d:SampleData ItemCount=5}" Margin="10,86,605,154"/>
        <Button x:Name="Kilepes" Content="Kilépés" HorizontalAlignment="Left" Margin="648,338,0,0" VerticalAlignment="Top" Height="63" Width="130" FontWeight="Bold" FontSize="22" Click="Kilepes_Click" BorderBrush="Black" Background="Red"/>

    </Grid>
</Window>
